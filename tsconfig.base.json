{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@dialectica-org/diff-viewer": ["packages/diff-viewer/src"],
      "@dialectica-org/diff-viewer/*": ["packages/diff-viewer/src/*"],

      "@dialectica-org/commons": ["packages/commons/src"],
      "@dialectica-org/commons/*": ["packages/commons/src/*"],

      "@dialectica-org/file-explorer": ["packages/file-explorer/src"],
      "@dialectica-org/file-explorer/*": ["packages/file-explorer/src/*"],

      "@dialectica-org/test-lib": ["packages/test-lib/src"],
      "@dialectica-org/test-lib/*": ["packages/test-lib/src/*"],

      "@github": ["packages/github/src"],
      "@github/*": ["packages/github/src/*"]
    }
  }
}

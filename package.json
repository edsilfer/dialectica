{
  "name": "dialectica",
  "version": "1.0.2",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "pnpm --filter './{apps,packages}/*' build",
    "build:watch": "pnpm --filter './{apps,packages}/*' build:watch",
    "demo:dev": "cross-env LOCAL_DIFF=true  pnpm --filter demo dev",
    "demo:prod": "cross-env LOCAL_DIFF='' pnpm --filter demo install --link-workspace-packages=false && pnpm --filter demo dev",
    "format": "prettier . --write",
    "coverage:apps": "pnpm --filter './apps/**' test --coverage",
    "coverage:packages": "pnpm --filter './packages/**' test --coverage",
    "test": "pnpm -r test",
    "test:apps": "pnpm --filter './apps/**' test",
    "test:packages": "pnpm --filter './packages/**' --filter '!./packages/test-lib' test",
    "lint": "pnpm dlx eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm dlx eslint . --ext .ts,.tsx --fix && pnpm format",
    "demo:deploy": "./scripts/deploy-gh-pages.sh --app apps/demo"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^13.24.0",
    "knip": "^5.62.0",
    "prettier": "^3.6.1",
    "typescript": "~5.8.3"
  }
}

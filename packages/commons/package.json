{
  "name": "@dialectica-org/commons",
  "version": "0.1.2",
  "description": "Common utilities for dialectica repository",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "pnpm build && pnpm lint && pnpm test"
  },
  "keywords": [
    "git",
    "diff",
    "react",
    "typescript",
    "viewer"
  ],
  "author": "Edgar Fernandes",
  "license": "AGPL-3.0-only",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@dialectica-org/test-lib": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "3.2.4",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@emotion/react": "^11.14.0",
    "antd": "^5.26.2",
    "highlight.js": "^11.11.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  }
